<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="@dimen/activity_padding"
    android:paddingLeft="@dimen/activity_padding_lr_small"
    android:paddingRight="@dimen/activity_padding_lr_small"
    android:weightSum="1"
    tools:context=".activity.MainActivity">


    <com.elementzinteractive.personalinfo.helper.CircularImageView
        android:id="@+id/imgAvatar"
        style="@style/ImageViewStyle"
        app:civ_border="true"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="7"
        android:paddingRight="@dimen/avatar_right_spacing"
        android:src="@drawable/user" />

    <EditText
        android:id="@+id/edtFirstName"
        style="@style/EditViewStyle"
        android:hint="@string/first_name"
        android:textSize="@dimen/activity_font_size_small" />

    <EditText
        android:id="@+id/edtLastName"
        style="@style/EditViewStyle"
        android:hint="@string/last_name"
        android:textSize="@dimen/activity_font_size_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/activity_font_size_small">

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:text="@string/gender"
            android:textSize="@dimen/activity_font_size_small" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearStyleRadioButton"
        android:orientation="vertical"
        android:id="@+id/rdGroupBtn">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:textSize="@dimen/activity_font_size_small">

            <RadioButton
                android:id="@+id/rdbtnGenderFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:text="Female"
                android:textSize="@dimen/activity_font_size_small" />

            <RadioButton
                android:id="@+id/rdbtnGenderMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:checked="false"
                android:text="Male"
                android:textSize="@dimen/activity_font_size_small" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLabelBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birth_date"
        android:textSize="@dimen/activity_font_size_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBirthDate"
            style="@style/TextViewBirthDateStyle"
            android:text="@string/birth_date_value"
            android:textSize="@dimen/activity_font_size_small" />

        <Button
            android:id="@+id/btnSetDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="setDate"
            android:textSize="@dimen/activity_font_size"
            android:text="@string/set_date" />

    </LinearLayout>

</LinearLayout>
